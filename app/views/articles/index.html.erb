<div class="header">
  <h1 class="title text-center">What's new in Wikinimous</h1>
</div>

<div class="wraper">
  <div class="container">
    <div class="row ">
    <ul>
      <% @articles.each do |article| %>
      <li class="article">
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= raw Kramdown::Document.new(article.content).to_html %> Created : <%= article.created_at%>
          <%= link_to "See more" , article_path(article)%></p>
          <div class="text-center">
            <ul class="list-inline">
              <li><%= link_to "UPDATE", edit_article_path(article), class: "btn btn-primary"%></li>
              <li><%= link_to "DELETE", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary"%></li>
            </ul>
          </div>
      </li>
      <% end %>
    </ul>
    </div>

  </div>
</div>

<div class="footer text-center">
<%= link_to "Write an article", new_article_path(@article), class:"footer btn btn-primary" %>
</div>
