<h1 class="title text-center">What's new in Wikinimous</h1>

<div class="wraper">
  <div class="container">
    <div class="row ">
    <ul>
      <% @articles.each do |article| %>
      <li class="article">
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= article.content %>
          <%= link_to "See more" , article_path(article)%></p>
          <ul class="list-inline">
            <li class="update"><%= link_to "UPDATE", edit_article_path(article) %></li>
            <li class="delete"><%= link_to "DELETE", article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></li>
          </ul>
      </li>
      <% end %>
    </ul>
    </div>

  </div>
</div>

  <h3 class="footer text-center"><%= link_to "Write an article", new_article_path(@article) %></h3>
